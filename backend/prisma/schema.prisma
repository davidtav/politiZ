generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String           @id @default(cuid())
  name      String
  email     String           @unique
  avatar    String?          
  createdAt DateTime         @default(now())
  follows   ChannelFollowers[]
  likes     PostLikes[]
  pollVotes PollVote[]
}

model Channel {
  id          String             @id @default(cuid())
  name        String             @unique
  description String
  avatar      String?
  category    String?
  createdAt   DateTime           @default(now())

  // Campos para configuração de scraping
  sourceUrl       String?        // URL da página que será raspada
  scrapeType      String?        // 'html' | 'rss' | 'api' (por enquanto vamos usar 'html')
  itemSelector    String?        // CSS selector do “card” de notícia
  titleSelector   String?        // selector para o título
  linkSelector    String?        // selector para o link
  contentSelector String?        // selector para o resumo/conteúdo
  imageSelector   String?        // selector para a imagem
  dateSelector    String?        // selector para a data, se quiser
  isActive        Boolean        @default(true) // se o canal participa do scraping

  posts       Post[]
  news        News[]
  followers   ChannelFollowers[]
}


model News {
  id          String   @id @default(cuid())
  channelId   String
  title       String
  content     String
  image       String?
  url         String?
  createdAt   DateTime @default(now())
  publishedAt DateTime?  // data original da notícia, se o site tiver

  channel     Channel  @relation(fields: [channelId], references: [id])

  @@index([channelId])
}

model Post {
  id        String      @id @default(cuid())
  channelId String
  title     String?
  content   String
  image     String?
  createdAt DateTime    @default(now())
  channel   Channel     @relation(fields: [channelId], references: [id])
  likes     PostLikes[]
  poll      Poll?
  @@index([channelId])
}

model Poll {
  id        String       @id @default(cuid())
  postId    String       @unique
  question  String
  endsAt    DateTime
  createdAt DateTime     @default(now())
  post      Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  options   PollOption[]
  votes     PollVote[]
}

model PollOption {
  id        String     @id @default(cuid())
  pollId    String
  text      String
  icon      String     // Nome do ícone (ex: 'FaThumbsUp')
  poll      Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votes     PollVote[]
  @@index([pollId])
}

model PollVote {
  id        String     @id @default(cuid())
  userId    String
  pollId    String
  optionId  String
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id])
  poll      Poll       @relation(fields: [pollId], references: [id], onDelete: Cascade)
  option    PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  @@unique([userId, pollId]) // Um usuário só pode votar uma vez por enquete
  @@index([pollId])
  @@index([optionId])
}

model ChannelFollowers {
  id        String    @id @default(cuid())
  userId    String
  channelId String
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  channel   Channel   @relation(fields: [channelId], references: [id])
  @@unique([userId, channelId])
  @@index([channelId])
}

model PostLikes {
  id        String    @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id])
  post      Post      @relation(fields: [postId], references: [id])
  @@unique([userId, postId])
  @@index([postId])
}

